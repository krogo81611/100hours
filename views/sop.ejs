<%- include('partials/header') -%>

<div class="container">
    <div class="row mt-5">
        <div class="col-6">
            <div class="mt-5">
              <h2 class="alignCenter">Create SOP</h2>
              <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input id="title" name="title">
                  </div>
                <div class="mb-3">
                    <label for="issueType" class="form-label">Type of Issue</label>
                    <select name="issueType" id="issueType">
                        <option value="hardware">Hardware</option>
                        <option value="application">Application</option>
                        <option value="firmware">Firmware</option>
                        <option value="network">Network</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="briefDescription" class="form-label">Brief Description</label>
                    <input id="briefDescription" name="briefDescription">
                  </div>
                <div class="mb-3">
                  <label for="steps" class="form-label">Steps to Resolve</label>
                  <textarea class="form-control" id="steps" name="steps"></textarea>
                </div>
                <div class="mb-3">
                  <label for="imgUpload" class="form-label">Screenshot</label>
                  <input type="file" class="form-control" id="imageUpload" name="file">
                </div>
                <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
              </form>
            </div>
        </div>


<%- include('partials/footer') -%>